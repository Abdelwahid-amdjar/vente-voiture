{% extends 'base.html.twig' %}


{% block body %}

    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('assets/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs"><span class="mr-2"><a href="{{ path('app_index') }}">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Cars <i class="ion-ios-arrow-forward"></i></span></p>
                    <h1 class="mb-3 bread">Choose Your Car</h1>
                </div>
            </div>
        </div>
    </section>


        <section class="ftco-section bg-light">
        <div class="container">
            <div class="row">
                {% for product in products %}
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url({{ product.url }});">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="{{ path('app_details', {'id': product.id}) }}">{{ product.marque }}</a></h2>
                            <div class="d-flex mb-3">
                                <p >{{ product.modele }}</p>
                                <p >{{ product.couleur }}</p>
                                <p class="price ml-auto">{{ product.price}} <span>/$</span></p>
                            </div>
                            {% set cartForm = form.createView %}
                            {{ form_start(cartForm) }}
                            <p class="d-flex mb-0 d-block">
                                <button type="submit" class="btn btn-primary py-2 mr-1">Add to Cart</button>
                                <a href="{{ path('app_details', {'id': product.id}) }}"  class="btn btn-secondary py-2 ml-1">Details</a>
                            </p>
                            {{ form_widget(cartForm.product, {'value': product.id}) }}
                            <div class="d-none">
                                {{ form_widget(cartForm.quantity, {'value': 1}) }}
                            </div>
                            {{ form_end(cartForm) }}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="row mt-5">
                <div class="col text-center">
                    <div class="block-27">
                        <ul>
                            <li><a href="#">&lt;</a></li>
                            <li class="active"><span>1</span></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">&gt;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}