{% extends 'base.auth.html.twig' %}

{% block title %}Connexion {% endblock %}

{% block body %}

    <div class="row m-0">
        <div class="col-12 p-0">
            <div class="login-card">
                <div>
                    <div>
                        <a class="logo" href="#">
                            <img class="img-fluid for-light" src="{{ asset('asset/images/logo/logo-icon.png') }}" alt="loginpage">
                        </a>
                    </div>
                    <div class="login-main">
                        <form method="post" class="theme-form">
                            <h4 class="text-center">Sign in to account</h4>
                            <p class="text-center">Enter your email & password to login</p>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }}">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                            <div class="form-group">
                                <label class="col-form-label">Email Address</label>
                                <input value="{{ last_username }}" class="form-control" type="email" name="email" required=""
                                       placeholder="Adresse e-mail">
                            </div>
                            <div class="form-group">
                                <label class="col-form-label">Password</label>
                                <div class="form-input position-relative">
                                    <input class="form-control" type="password" name="password" required=""
                                           placeholder="*********">
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <div class="checkbox p-0">
                                    <input id="checkbox1" type="checkbox" name="_remember_me">
                                    <label class="text-muted" for="checkbox1">Remember password</label>
                                </div>
                                <a class="link" href="#">Forgot password?</a>
                                <div class="text-end mt-3">
                                    <button class="btn btn-primary btn-block w-100" type="submit">Sign in </button>
                                </div>
                            </div>
                            <div class="login-social-title">
                                <h6>Or Sign in with</h6>
                            </div>
                            <div class="form-group">
                                <ul class="login-social">
                                    <li><a href="https://www.linkedin.com" target="_blank"><i data-feather="linkedin"></i></a></li>
                                    <li><a href="https://www.twitter.com" target="_blank"><i data-feather="twitter"></i></a></li>
                                    <li><a href="https://www.facebook.com" target="_blank"><i data-feather="facebook"></i></a></li>
                                    <li><a href="https://www.instagram.com" target="_blank"><i data-feather="instagram"></i></a></li>
                                </ul>
                            </div>
                            <p class="mt-4 mb-0 text-center">Don't have account?<a class="ms-2" href="{{ path('app_register') }}">Create Account</a></p>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
